<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
    android:layout_height="match_parent">

	<EditText
		android:id="@+id/txtDescriptionSubjects"
		android:layout_width="0dp"
		android:layout_height="45dp"
		android:layout_marginStart="15dp"
		android:layout_marginTop="40dp"
		android:layout_marginEnd="15dp"
		android:ems="10"
		android:hint="Descripción"
		android:inputType="textPersonName"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<EditText
		android:id="@+id/txtCredits"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:ems="10"
		android:hint="Crédito(s)"
		android:inputType="number"
		app:layout_constraintStart_toStartOf="@+id/txtDescriptionSubjects"
		app:layout_constraintTop_toBottomOf="@+id/txtDescriptionSubjects"
		app:layout_constraintWidth_max="150dp" />

	<Button
		android:id="@+id/btnSaveSubject"
		android:layout_width="0dp"
		android:layout_height="50dp"
		android:layout_marginTop="40dp"
		android:text="Guardar"
		app:layout_constraintEnd_toEndOf="@+id/txtDescriptionSubjects"
		app:layout_constraintStart_toStartOf="@+id/txtDescriptionSubjects"
		app:layout_constraintTop_toBottomOf="@+id/txtCredits" />
</androidx.constraintlayout.widget.ConstraintLayout>
